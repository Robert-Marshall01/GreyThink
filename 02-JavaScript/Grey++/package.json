{
    "name": "grey-plus-plus",
    "version": "0.1.0",
    "description": "Grey++ â€“ a multi-paradigm language with a universal AST",
    "type": "module",
    "main": "src/index.js",
    "bin": {
        "grey": "src/index.js"
    },
    "scripts": {
        "start": "node src/index.js",
        "run:file": "node src/index.js run",
        "test": "npx tsx --test src/ast/grey_test.ts",
        "test:grammar": "npx tsx src/ast/grey_grammar.ts --test",
        "test:translate": "npx tsx src/ast/grey_translate.ts --test",
        "test:examples": "npx tsx src/ast/grey_examples.ts --test",
        "test:repl": "npx tsx src/ast/grey_repl.ts --test",
        "test:all": "npm test && npm run test:grammar && npm run test:translate && npm run test:examples"
    },
    "greypp": {
        "fileExtensions": [
            ".greypp",
            ".gpp",
            ".grey"
        ],
        "mimeType": "text/x-greypp",
        "languageId": "greypp"
    },
    "keywords": [
        "language",
        "repl",
        "ast",
        "multi-paradigm",
        "greypp",
        "universal"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^25.2.1",
        "tsx": "^4.19.0",
        "typescript": "^5.6.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "greypp",
                "aliases": [
                    "Grey++",
                    "GreyPP",
                    "greypp"
                ],
                "extensions": [
                    ".greypp",
                    ".gpp",
                    ".grey"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "greypp",
                "scopeName": "source.greypp",
                "path": "./syntaxes/greypp.tmLanguage.json"
            }
        ]
    }
}