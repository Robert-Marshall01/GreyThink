<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 <!-- Heading style -->
 <Style x:Key="HeadingTextStyle" TargetType="TextBlock">
 <Setter Property="FontSize" Value="18"/>
 <Setter Property="FontWeight" Value="SemiBold"/>
 <Setter Property="Margin" Value="0,0,0,12"/>
 <Setter Property="Foreground" Value="{ThemeResource PageTextBrush}"/>
 </Style>

 <!-- Primary (accent) button -->
 <Style x:Key="PrimaryButtonStyle" TargetType="Button">
 <Setter Property="Background" Value="{ThemeResource PrimaryButtonBackgroundBrush}"/>
 <Setter Property="Foreground" Value="{ThemeResource PrimaryButtonForegroundBrush}"/>
 <Setter Property="Padding" Value="8,4"/>
 </Style>

 <!-- Secondary / neutral button -->
 <Style x:Key="SecondaryButtonStyle" TargetType="Button">
 <Setter Property="Background" Value="{ThemeResource SecondaryButtonBackgroundBrush}"/>
 <Setter Property="Foreground" Value="{ThemeResource SecondaryButtonForegroundBrush}"/>
 <Setter Property="Padding" Value="8,4"/>
 </Style>

 <!-- TextBox default padding for better touch targets -->
 <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
 <Setter Property="Margin" Value="0,6,0,6"/>
 <Setter Property="Padding" Value="8"/>
 <!-- Use TextControl resources so input foreground/background are distinct from page text -->
 <Setter Property="Background" Value="{ThemeResource TextControlBackground}"/>
 <Setter Property="Foreground" Value="{ThemeResource TextControlForeground}"/>
 </Style>

 <!-- Result panel background and text -->
 <Style x:Key="ResultTextStyle" TargetType="TextBlock">
 <Setter Property="FontFamily" Value="Segoe UI"/>
 <Setter Property="FontSize" Value="14"/>
 <Setter Property="Foreground" Value="{ThemeResource ResultTextBrush}"/>
 </Style>

</ResourceDictionary>