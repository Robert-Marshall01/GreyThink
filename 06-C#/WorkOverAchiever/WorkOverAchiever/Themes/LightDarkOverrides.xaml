<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 <!-- Theme dictionaries provide theme-specific brush values. Use {ThemeResource Key} to reference them. -->
 <ResourceDictionary.ThemeDictionaries>
 <ResourceDictionary x:Key="Light">
 <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF" />
 <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5" />
 <SolidColorBrush x:Key="ControlBorderBrush" Color="#FFCCCCCC" />
 <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#0078D4" />
 <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFFFF" />
 <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="#E0E0E0" />
 <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#111111" />
 <SolidColorBrush x:Key="ResultTextBrush" Color="#111111" />
 <SolidColorBrush x:Key="PageTextBrush" Color="#111111" />
 <!-- Input specific brushes so inputs contrast with page text -->
 <SolidColorBrush x:Key="TextControlForeground" Color="#111111" />
 <SolidColorBrush x:Key="TextControlBackground" Color="#FFFFFFFF" />
 </ResourceDictionary>

 <ResourceDictionary x:Key="Dark">
 <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1E1E1E" />
 <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF2B2B2B" />
 <SolidColorBrush x:Key="ControlBorderBrush" Color="#FF3A3A3A" />
 <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#0A84FF" />
 <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFFFF" />
 <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="#3A3A3A" />
 <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#F3F3F3" />
 <SolidColorBrush x:Key="ResultTextBrush" Color="#E6E6E6" />
 <SolidColorBrush x:Key="PageTextBrush" Color="#E6E6E6" />
 <!-- Input specific brushes so inputs contrast with page text -->
 <SolidColorBrush x:Key="TextControlForeground" Color="#E6E6E6" />
 <SolidColorBrush x:Key="TextControlBackground" Color="#FF2B2B2B" />
 </ResourceDictionary>

 <!-- Fallback (used if theme is not matched) -->
 <ResourceDictionary x:Key="Default">
 <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF" />
 <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5" />
 <SolidColorBrush x:Key="ControlBorderBrush" Color="#FFCCCCCC" />
 <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#0078D4" />
 <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFFFF" />
 <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="#E0E0E0" />
 <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#111111" />
 <SolidColorBrush x:Key="ResultTextBrush" Color="#111111" />
 <SolidColorBrush x:Key="PageTextBrush" Color="#111111" />
 <SolidColorBrush x:Key="TextControlForeground" Color="#111111" />
 <SolidColorBrush x:Key="TextControlBackground" Color="#FFFFFFFF" />
 </ResourceDictionary>
 </ResourceDictionary.ThemeDictionaries>

 <!-- Expose theme resources as theme resources to make {ThemeResource} lookups work. -->
 <!-- These are placeholders so XAML tooling can resolve keys at compile time. Actual values come from the ThemeDictionaries above. -->
 <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White" />
 <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5" />
 <SolidColorBrush x:Key="ControlBorderBrush" Color="#FFCCCCCC" />
 <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="#0078D4" />
 <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="#FFFFFFFF" />
 <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="#E0E0E0" />
 <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#111111" />
 <SolidColorBrush x:Key="ResultTextBrush" Color="#111111" />
 <SolidColorBrush x:Key="PageTextBrush" Color="#111111" />
 <SolidColorBrush x:Key="TextControlForeground" Color="#111111" />
 <SolidColorBrush x:Key="TextControlBackground" Color="#FFFFFFFF" />

</ResourceDictionary>