          "type": "table",
          "title": "Principle Health",
          "columns": ["Principle", "Status", "Last Reviewed", "Next Review"],
          "data_source": "constitutional_principles",
          "max_rows": 10
        },
        {
          "type": "timeseries",
          "title": "Amendment Activity",
          "metrics": ["amendments_proposed", "amendments_adopted", "amendments_rejected"],
          "time_range": "10y"
        }
      ]
    }
  ],
  "alerts": [
    {
      "name": "permanence_score_declining",
      "condition": "permanence_health_score < 0.8 AND trend(permanence_health_score, 30d) < 0",
      "severity": "warning",
      "message": "Permanence health score declining",
      "runbook": "docs/runbooks/permanence_health.md"
    },
    {
      "name": "permanence_score_critical",
      "condition": "permanence_health_score < 0.5",
      "severity": "critical",
      "message": "Permanence health critically low",
      "runbook": "docs/runbooks/permanence_critical.md"
    },
    {
      "name": "core_integrity_breach",
      "condition": "core_integrity_score < 1.0",
      "severity": "critical",
      "message": "Core integrity compromised - immutable principles affected",
      "runbook": "docs/runbooks/core_integrity.md"
    },
    {
      "name": "repair_health_low",
      "condition": "self_repair_health_score < 0.7",
      "severity": "warning",
      "message": "Self-repair capability degraded",
      "runbook": "docs/runbooks/self_repair.md"
    },
    {
      "name": "evolution_stuck",
      "condition": "evolution_velocity < 0.5 AND age(last_completed_evolution) > 365d",
      "severity": "warning",
      "message": "Evolution velocity too low - system may be stagnating",
      "runbook": "docs/runbooks/evolution_velocity.md"
    },
    {
      "name": "reversion_rate_high",
      "condition": "evolution_reversion_rate > 0.2",
      "severity": "warning",
      "message": "High evolution reversion rate indicates quality issues",
      "runbook": "docs/runbooks/evolution_quality.md"
    },
    {
      "name": "governance_participation_low",
      "condition": "governance_participation_rate < 0.5",
      "severity": "warning",
      "message": "Governance participation declining",
      "runbook": "docs/runbooks/governance_participation.md"
    },
    {
      "name": "succession_crisis",
      "condition": "succession_concern_count >= 2",
      "severity": "critical",
      "message": "Multiple governance bodies have succession gaps",
      "runbook": "docs/runbooks/succession_crisis.md"
    },
    {
      "name": "power_concentration",
      "condition": "power_concentration_risk > 0.3",
      "severity": "warning",
      "message": "Power concentration risk elevated",
      "runbook": "docs/runbooks/power_concentration.md"
    },
    {
      "name": "constitutional_violation",
      "condition": "constitutional_compliance_rate < 1.0",
      "severity": "critical",
      "message": "Constitutional violation detected",
      "runbook": "docs/runbooks/constitutional_violation.md"
    },
    {
      "name": "existential_issue",
      "condition": "issues_by_severity['Existential'] > 0",
      "severity": "critical",
      "message": "Existential-level issue detected",
      "runbook": "docs/runbooks/existential_response.md"
    }
  ],
  "data_sources": {
    "self_repair_engine": {
      "type": "internal",
      "module": "myth.permanence.self_repair",
      "refresh": "1m"
    },
    "self_evolution_engine": {
      "type": "internal",
      "module": "myth.permanence.self_evolution",
      "refresh": "5m"
    },
    "self_governance_engine": {
      "type": "internal",
      "module": "myth.permanence.self_governance",
      "refresh": "5m"
    },
    "permanence_metrics": {
      "type": "metrics",
      "database": "grey_permanence",
      "retention": "forever"
    }
  }
}
