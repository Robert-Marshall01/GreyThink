<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF"/>
      <SolidColorBrush x:Key="PageTextBrush" Color="#FF000000"/>
      <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5"/>
      <SolidColorBrush x:Key="ResultTextBrush" Color="#FF111111"/>
    </ResourceDictionary>

    <ResourceDictionary x:Key="Dark">
      <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1E1E1E"/>
      <SolidColorBrush x:Key="PageTextBrush" Color="#FFFFFFFF"/>
      <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF2A2A2A"/>
      <SolidColorBrush x:Key="ResultTextBrush" Color="#FFFFFFFF"/>
    </ResourceDictionary>

    <!-- Default must provide concrete resources so ThemeResource lookups succeed at parse time -->
    <ResourceDictionary x:Key="Default">
      <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF"/>
      <SolidColorBrush x:Key="PageTextBrush" Color="#FF000000"/>
      <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF5F5F5"/>
      <SolidColorBrush x:Key="ResultTextBrush" Color="#FF111111"/>
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
